#!/bin/sh

prefix=@prefix@
bindir=$prefix/bin
etcdir=@sysconfdir@


gw=`route | grep default | awk '{print $2}' `

case "$gw" in
    vpv*)   region="VV" ;;
    vnn*)   region="VNN" ;;
    vtk*)   region="VTK" ;;
      *)   region="VA";;
esac


if [ $region = "VA" ] ; then

    SUBNET=`/sbin/ifconfig eth0 | grep "inet addr" | cut -d. -f3`

    if [ $SUBNET = "20" ] ; then
	region="FOU"
    fi
fi

mkdir -p $HOME/.tseries

$bindir/tseries.bin-@PVERSION@ $@ -S $region -s $etcdir/tseries/@PVERSION@/tseries.ctl -T "@APP@"




