#!/bin/sh

prefix=@prefix@
bindir=$prefix/bin
etcdir=@sysconfdir@

export LC_ALL=C
export LC_NUMERIC=C

gw=`route | grep default | awk '{print $2}' `

case "$gw" in
    vpv*)   region="VV"  ;;
    vnn*)   region="VNN" ;;
    vtk*)   region="VTK" ;;
       *)   region="VA"  ;;
esac


if [ $region = "VA" ] ; then

    SUBNET=`/sbin/ifconfig eth0 | grep "inet addr" | cut -d. -f3`

    if [ x"$SUBNET" = "x20" ] ; then
	region="FOU"
    fi
fi

 
VGLTEST=`hostname -f | grep vglserver`

if [ -n "$VGLTEST" ] ; then

    region=VGL
    echo "You are running on VGL - enjoy"

fi




mkdir -p $HOME/.tseries

$bindir/tseries.bin-@PVERSION@ $@ -S $region -s $etcdir/tseries/@PVERSION@/tseries.ctl -T tseries




